@model List<TalepYonetimi.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Kullanıcı Yönetimi</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Rol</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><strong>@user.FullName</strong></td>
                                <td>@user.Email</td>
                                <td><span class="badge bg-primary">@user.RoleName</span></td>
                                <td><span class="local-date" data-utc="@user.CreatedDate.ToString("o")"></span></td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditUserRole" asp-route-id="@user.Id"
                                        class="btn btn-sm btn-outline-primary" title="Rol Değiştir">
                                        <i class="bi bi-person-gear"></i> Rol
                                    </a>
                                    <form asp-action="ToggleUserActive" asp-route-id="@user.Id" method="post"
                                        class="d-inline">
                                        @if (user.IsActive)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Pasife Al"
                                                onclick="return confirm('Bu kullanıcıyı pasife almak istediğinize emin misiniz?')">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Aktife Al">
                                                <i class="bi bi-play-circle"></i>
                                            </button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Roles" class="btn btn-outline-secondary">
            <i class="bi bi-shield-lock"></i> Rol Yönetimi
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.local-date').forEach(function (el) {
                var utcDate = new Date(el.dataset.utc);
                el.textContent = utcDate.toLocaleDateString('tr-TR') + ' ' + utcDate.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
            });
        });
    </script>
}