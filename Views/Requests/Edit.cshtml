@model TalepYonetimi.ViewModels.RequestEditViewModel
@using TalepYonetimi.Enums
@{
    ViewData["Title"] = "Talep Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Talep Düzenle - @Model.RequestNumber</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RequestNumber" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RequestType" class="form-label"></label>
                                <select asp-for="RequestType" class="form-select">
                                    <option value="@RequestType.Leave">İzin</option>
                                    <option value="@RequestType.Equipment">Teçhizat</option>
                                    <option value="@RequestType.Support">Destek</option>
                                    <option value="@RequestType.Other">Diğer</option>
                                </select>
                                <span asp-validation-for="RequestType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Priority" class="form-label"></label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="@Priority.Low">Düşük</option>
                                    <option value="@Priority.Medium">Orta</option>
                                    <option value="@Priority.High">Yüksek</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>
                            <div>
                                <button type="submit" name="submitButton" value="draft" class="btn btn-secondary">
                                    <i class="bi bi-save"></i> Kaydet
                                </button>
                                <button type="submit" name="submitButton" value="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i> Kaydet ve Onaya Gönder
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}