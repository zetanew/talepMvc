@model TalepYonetimi.ViewModels.PagedResult<TalepYonetimi.ViewModels.RequestListViewModel>
@using TalepYonetimi.Enums
@{
    ViewData["Title"] = "Talepler";
    var filter = ViewBag.Filter as TalepYonetimi.ViewModels.RequestFilterViewModel ?? new
    TalepYonetimi.ViewModels.RequestFilterViewModel();
    var canViewAll = (bool)(ViewBag.CanViewAll ?? false);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-task"></i> Talepler</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Talep
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Arama</label>
                    <input type="text" name="SearchTerm" value="@filter.SearchTerm" class="form-control"
                        placeholder="Başlık veya talep no...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Durum</label>
                    <select name="Status" class="form-select">
                        <option value="">Tümü</option>
                        <option value="@((int)RequestStatus.Draft)" selected="@(filter.Status == RequestStatus.Draft)">
                            Taslak</option>
                        <option value="@((int)RequestStatus.PendingApproval)"
                            selected="@(filter.Status == RequestStatus.PendingApproval)">Onay Bekliyor</option>
                        <option value="@((int)RequestStatus.Approved)"
                            selected="@(filter.Status == RequestStatus.Approved)">Onaylandı</option>
                        <option value="@((int)RequestStatus.Rejected)"
                            selected="@(filter.Status == RequestStatus.Rejected)">Reddedildi</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Öncelik</label>
                    <select name="Priority" class="form-select">
                        <option value="">Tümü</option>
                        <option value="@((int)Priority.Low)" selected="@(filter.Priority == Priority.Low)">Düşük
                        </option>
                        <option value="@((int)Priority.Medium)" selected="@(filter.Priority == Priority.Medium)">Orta
                        </option>
                        <option value="@((int)Priority.High)" selected="@(filter.Priority == Priority.High)">Yüksek
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="date" name="StartDate" value="@filter.StartDate?.ToString("yyyy-MM-dd")"
                        class="form-control">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="date" name="EndDate" value="@filter.EndDate?.ToString("yyyy-MM-dd")"
                        class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtrele
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Temizle
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tablo -->
    <div class="card">
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Talep No</th>
                                <th>Başlık</th>
                                <th>Tür</th>
                                <th>Öncelik</th>
                                <th>Durum</th>
                                @if (canViewAll)
                                {
                                    <th>Oluşturan</th>
                                }
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><strong>@item.RequestNumber</strong></td>
                                    <td>@item.Title</td>
                                    <td>
                                        @switch (item.RequestType)
                                        {
                                            case RequestType.Leave:
                                                <span class="badge bg-info">İzin</span>
                                                break;
                                            case RequestType.Equipment:
                                                <span class="badge bg-secondary">Teçhizat</span>
                                                break;
                                            case RequestType.Support:
                                                <span class="badge bg-warning text-dark">Destek</span>
                                                break;
                                            default:
                                                <span class="badge bg-light text-dark">Diğer</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (item.Priority)
                                        {
                                            case Priority.Low:
                                                <span class="badge bg-success">Düşük</span>
                                                break;
                                            case Priority.Medium:
                                                <span class="badge bg-warning text-dark">Orta</span>
                                                break;
                                            case Priority.High:
                                                <span class="badge bg-danger">Yüksek</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case RequestStatus.Draft:
                                                <span class="badge bg-secondary">Taslak</span>
                                                break;
                                            case RequestStatus.PendingApproval:
                                                <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                                break;
                                            case RequestStatus.Approved:
                                                <span class="badge bg-success">Onaylandı</span>
                                                break;
                                            case RequestStatus.Rejected:
                                                <span class="badge bg-danger">Reddedildi</span>
                                                break;
                                        }
                                    </td>
                                    @if (canViewAll)
                                    {
                                        <td>@item.CreatedByUserName</td>
                                    }
                                    <td><span class="local-date" data-utc="@item.CreatedDate.ToString("o")"></span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"
                                            title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Status == RequestStatus.Draft)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"
                                                title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (canViewAll && item.Status == RequestStatus.PendingApproval)
                                        {
                                            <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"
                                                title="Onayla">
                                                <i class="bi bi-check-circle"></i>
                                            </a>
                                            <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                                title="Reddet">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Sayfalama -->
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-Page="@(Model.Page - 1)"
                                    asp-route-SearchTerm="@filter.SearchTerm" asp-route-Status="@((int?)filter.Status)"
                                    asp-route-Priority="@((int?)filter.Priority)">Önceki</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-Page="@i"
                                        asp-route-SearchTerm="@filter.SearchTerm" asp-route-Status="@((int?)filter.Status)"
                                        asp-route-Priority="@((int?)filter.Priority)">@i</a>
                                </li>
                            }
                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-Page="@(Model.Page + 1)"
                                    asp-route-SearchTerm="@filter.SearchTerm" asp-route-Status="@((int?)filter.Status)"
                                    asp-route-Priority="@((int?)filter.Priority)">Sonraki</a>
                            </li>
                        </ul>
                    </nav>
                }

                <p class="text-muted text-center">
                    Toplam @Model.TotalCount talep, @Model.TotalPages sayfa
                </p>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Henüz talep bulunmuyor</h4>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> İlk Talebi Oluştur
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.local-date').forEach(function (el) {
                var utcDate = new Date(el.dataset.utc);
                el.textContent = utcDate.toLocaleDateString('tr-TR') + ' ' + utcDate.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
            });
        });
    </script>
}